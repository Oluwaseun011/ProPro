<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXam.Views.StudentDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="FirstName:" FontSize="Medium" />
        <Label Text="{Binding FirstName}" FontSize="Small"/>
        <Label Text="LastName:" FontSize="Medium" />
        <Label Text="{Binding LastName}" FontSize="Small"/>
        <Label Text="Gender:" FontSize="Medium" />
        <Label Text="{Binding Gender}" FontSize="Small"/>
        <Label Text="Date of Birth:" FontSize="Medium" />
        <Label Text="{Binding DateOfBirth}" FontSize="Small"/>
    </StackLayout>

</ContentPage>